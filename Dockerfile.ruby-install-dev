ARG RUBY_FROM_TAG
FROM bearstech/ruby:${RUBY_FROM_TAG}

RUN set -eux \
    &&  apt-get update \
    &&  apt-get install -y --no-install-recommends \
                    build-essential \
                    ca-certificates \
                    git \
                     libgmp-dev \
                    libpq-dev \
                    lsb-release \
    && if [ "$(lsb_release -cs)" = "stretch" ]; then \
           apt-get install -y --no-install-recommends \
                    default-libmysqlclient-dev \
                    libmariadb-dev; \
       else \
           apt-get install -y --no-install-recommends \
                    libmysqlclient-dev; \
       fi \
    &&  apt-get clean \
    &&  rm -rf /var/lib/apt/lists/*

ARG GIT_VERSION
LABEL com.bearstech.source.ruby=https://github.com/factorysh/docker-ruby/commit/${GIT_VERSION}
